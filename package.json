{
  "name": "react-interactive-guide",
  "version": "1.0.0",
  "description": "Interactive tour guide for your react app",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "parcel examples/index.html -d build",
    "clean": "rimraf dist",
    "build": "yarn clean && microbundle  -f es,cjs",
    "lint:fix": "eslint --fix 'src/**/*.{js,ts,tsx}'",
    "pretty": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "release": "yarn clean && yarn lint:fix && yarn pretty && yarn build && yarn publish"
  },
  "keywords": [
    "react",
    "react-component",
    "hooks",
    "react-hooks",
    "tour",
    "guide",
    "tutorial"
  ],
  "author": "Dominic Lee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dominictwlee/react-interactive-guide.git"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "eslint": "6.x",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "microbundle": "^0.11.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.1.0",
    "react-spring": "^8.0.27"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
